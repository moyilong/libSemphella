        <Button x:ConnectionId='7' x:Name="execute" Content="执行" HorizontalAlignment="Left" Margin="654,223,0,0" VerticalAlignment="Top"                      />
        <TextBlock x:ConnectionId='8' x:Name="system_tips" HorizontalAlignment="Left" Margin="183,290,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" RenderTransformOrigin="-0.168,0.99" Height="32" TextAlignment="Center" Width="382" />
