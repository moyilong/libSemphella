    xmlns:local="using:cryptutils_windows_app"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBox x:ConnectionId='1' x:Name="input" HorizontalAlignment="Left" Margin="315,88,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250"/>
        <TextBox x:ConnectionId='2' x:Name="output" HorizontalAlignment="Left" Margin="315,150,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250"/>
        <TextBox x:ConnectionId='3' x:Name="password" HorizontalAlignment="Left" Margin="315,223,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="250"/>
        <TextBlock x:ConnectionId='4' x:Name="textBlock" HorizontalAlignment="Left" Margin="183,88,0,0" TextWrapping="Wrap" Text="输入" VerticalAlignment="Top" RenderTransformOrigin="-0.168,0.99" Height="32" TextAlignment="Center" />
